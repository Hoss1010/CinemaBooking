@model Cinemas

<div class="container my-3">
    <div class="row mb-3 align-items-center">
        <div class="col-md-12">
            <h2 class="display-6">Edit Cinema</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <form action="/Admin/Cinema/Edit" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="Name" value="@Model.Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input type="text" class="form-control" id="Description" name="Description" value="@Model.Description">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="cinemalogo" class="form-label">CinemaLogo</label>
                    <input type="text" class="form-control" id="name" name="CinemaLogo" value="@Model.CinemaLogo">
                    <span asp-validation-for="CinemaLogo" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="address" class="form-label">Address</label>
                    <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                 
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

