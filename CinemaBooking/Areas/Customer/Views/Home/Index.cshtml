@model List<CinemaBooking.Models.Movies>
@{
    ViewData["Title"] = "Home Page";
}
@section Scripts {
    @if (TempData["Notification"] is not null)
    {
        <script>
            toastr.success('@TempData["Notification"]')
        </script>
    }
    @if (TempData["Notification-error"] is not null)
    {
        <script>
            toastr.error('@TempData["Notification-error"]')
        </script>
    } 
}


<section class="hero-section">

    <div class="hero-content">
        <div class="hero-text">
            <h1>Experience Movies<br>Like Never Before</h1>
            <p class="subtitle">Get ready for an unforgettable cinema experience with the latest movies and premium comfort</p>
            <div class="movie-meta">
                <div class="meta-item">
                    <i class="fas fa-film"></i>
                    <div class="meta-info">
                        <span class="meta-number">100+</span>
                        <span class="meta-label">Movies</span>
                    </div>
                </div>
                <div class="meta-item">
                    <i class="fas fa-building"></i>
                    <div class="meta-info">
                        <span class="meta-number">50</span>
                        <span class="meta-label">Cinemas</span>
                    </div>
                </div>
                <div class="meta-item">
                    <i class="fas fa-couch"></i>
                    <div class="meta-info">
                        <span class="meta-number">5K+</span>
                        <span class="meta-label">Seats</span>
                    </div>

                </div>
                 
            </div>
            <div class="hero-buttons">
                <button class="cta-button">Book Tickets <i class="fas fa-ticket-alt"></i></button>
                <button class="secondary-button">View Schedule <i class="fas fa-calendar"></i></button>
            </div>
        </div>
        <div class="featured-movie">
            <div class="now-showing">NOW SHOWING</div>
            <img src="images/movie7.png" alt="Featured Movie" class="featured-poster">
            <div class="movie-rating">
                <div class="rating-circle">
                    <span class="rating-number">8.5</span>
                    <span class="rating-text">IMDb</span>
                </div>
            </div>
        </div>
    </div>
    <div class="hero-overlay"></div>
</section>

<section class="discover-movies">
    <div class="section-header">
        <h2>Discover Movies</h2>
        <div class="filter-tabs">
            <button class="active">Random</button>
            <button>Popular</button>
            <button>Recent</button>
        </div>
    </div>
    <div class="movies-grid">
        <!-- Movie Card 1 -->
        @foreach (var item in Model)
        {
            <div class="movie-thumbnail">
                <img src="/images/@item.ImgUrl" alt="@item.Name" />
                <span class="availability-badge" data-status="@(item.IsAvailable ? "available" : "unavailable")">
                    @(item.IsAvailable ? "Available" : "Unavailable")
                </span>
                <div class="movie-info">
                    <h3>@item.Name</h3>
                    <p>@item.StartDate | @item.EndDate</p>
                    <div class="rating">@item.Price</div>
                </div>
                <div class="card-buttons">
                    <button class="book-now-btn" @(item.IsAvailable ? "" : "disabled")>
                        <i class="fas fa-ticket-alt"></i>
                        Book Now
                    </button>
                    <!-- التعديل هنا -->
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="details-btn">
                        <i class="fas fa-info-circle"></i>
                        Details
                    </a>
                </div>
            </div>
        }



